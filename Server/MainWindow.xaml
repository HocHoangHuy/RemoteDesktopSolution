<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="grid_ImageContainer" Margin="0,0,0,0">
        <Image x:Name="image_Screen" Stretch="Uniform" Source="/Screenshot (38).png"
                MouseLeftButtonDown="image_Screen_MouseLeftButtonDown"
               MouseMove="image_Screen_MouseMove"/>
    </Grid>
</Window>
